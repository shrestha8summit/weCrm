datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName      String
  lastName       String
  username       String   @unique
  email          String   @unique
  hashedPassword String
  phoneNumber    String?
  role           String
  userType       String?
  photo          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model company { 
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName      String  
  lastName       String 
  email          String   @unique
  phone          String   @unique
  password       String  
  companyName    String   @unique
  GSTNumber      String   @unique
  plan           String
  agreeToterms   Boolean 
  timeZone       String  
  couponCode     String?  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}